---
const socialLinks = [
  { name: "GitHub", icon: "üíª", url: "#" },
  { name: "Twitter", icon: "üê¶", url: "#" },
  { name: "LinkedIn", icon: "üíº", url: "#" },
  { name: "Discord", icon: "üí¨", url: "#" },
];

const footerLinks = [
  { label: "About", href: "/about" },
  { label: "Blog", href: "/posts" },
  { label: "Write for Us", href: "/write-for-us" },
  { label: "Ethos", href: "/ethos" },
];
---

<footer class="glass-card animate-fade-in" style="margin-top:4rem; padding:2.5rem 1.5rem 1.5rem 1.5rem; position:relative; overflow:hidden;">
  <!-- Gradient Background -->
  <div style="position:absolute; inset:0; background:linear-gradient(135deg, rgba(192, 38, 211, 0.05), rgba(139, 92, 246, 0.05), rgba(6, 182, 212, 0.05)); pointer-events:none;"></div>
  
  <!-- Content -->
  <div style="position:relative; z-index:1;">
    <div style="display:grid; grid-template-columns:repeat(auto-fit, minmax(250px, 1fr)); gap:2rem; margin-bottom:2rem;">
      <!-- Brand Section -->
      <div>
        <div style="display:flex; align-items:center; gap:0.75rem; margin-bottom:1rem;">
          <div style="width:40px; height:40px; border-radius:999px; background:var(--gradient-primary); box-shadow:0 0 20px rgba(192, 38, 211, 0.4);"></div>
          <div>
            <div style="font-weight:700; font-size:1.1rem;" class="gradient-text">Neural Hive</div>
            <div style="font-size:0.75rem; color:var(--muted); font-weight:500;">ML Mondays</div>
          </div>
        </div>
        <p style="color:var(--muted); font-size:0.9rem; line-height:1.6; max-width:300px;">
          Exploring machine learning, one Monday at a time. Join our community of curious minds and passionate learners.
        </p>
        
        <!-- Social Links -->
        <div style="display:flex; gap:0.75rem; margin-top:1.5rem;">
          {socialLinks.map(social => (
            <a 
              href={social.url}
              class="social-link"
              style="width:40px; height:40px; display:flex; align-items:center; justify-content:center; border-radius:10px; background:var(--bg-elevated); border:1px solid var(--border); transition:all 0.3s; font-size:1.2rem;"
              aria-label={social.name}
            >
              {social.icon}
            </a>
          ))}
        </div>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 style="font-size:0.9rem; font-weight:700; margin-bottom:1rem; text-transform:uppercase; letter-spacing:0.05em; color:var(--text);">
          Quick Links
        </h3>
        <ul style="list-style:none; padding:0; margin:0; display:flex; flex-direction:column; gap:0.6rem;">
          {footerLinks.map(link => (
            <li>
              <a 
                href={link.href}
                class="footer-link"
                style="color:var(--muted); font-size:0.9rem; transition:all 0.3s; display:flex; align-items:center; gap:0.4rem;"
              >
                <span style="transition:transform 0.3s;">‚Üí</span>
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Newsletter Section -->
      <div>
        <h3 style="font-size:0.9rem; font-weight:700; margin-bottom:1rem; text-transform:uppercase; letter-spacing:0.05em; color:var(--text);">
          Stay Updated
        </h3>
        <p style="color:var(--muted); font-size:0.85rem; margin-bottom:1rem;">
          Get weekly ML insights delivered to your inbox.
        </p>
        <div style="display:flex; gap:0.5rem;">
          <input 
            type="email" 
            placeholder="your@email.com"
            style="flex:1; padding:0.65rem 1rem; border-radius:10px; background:var(--bg-elevated); border:1px solid var(--border); color:var(--text); font-size:0.85rem; transition:all 0.3s;"
            class="newsletter-input"
          />
          <button 
            class="btn-primary"
            style="padding:0.65rem 1.2rem; font-size:0.85rem; white-space:nowrap;"
          >
            Subscribe
          </button>
        </div>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div style="padding-top:1.5rem; border-top:1px solid var(--border); display:flex; justify-content:space-between; align-items:center; flex-wrap:wrap; gap:1rem;">
      <p style="color:var(--muted); font-size:0.85rem; margin:0;">
        ¬© 2025 Neural Hive. Built for the WebDev Recruitments Challenge.
      </p>
      <div style="display:flex; gap:1.5rem; font-size:0.85rem;">
        <a href="#" style="color:var(--muted); transition:color 0.3s;" class="footer-link">Privacy</a>
        <a href="#" style="color:var(--muted); transition:color 0.3s;" class="footer-link">Terms</a>
        <a href="#" style="color:var(--muted); transition:color 0.3s;" class="footer-link">Contact</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .social-link:hover {
    background: var(--gradient-primary);
    border-color: transparent;
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 8px 16px rgba(192, 38, 211, 0.3);
  }
  
  .footer-link:hover {
    color: var(--accent-primary);
  }
  
  .footer-link:hover span {
    transform: translateX(4px);
  }
  
  .newsletter-input:focus {
    outline: none;
    border-color: var(--accent-primary);
    box-shadow: 0 0 0 3px rgba(192, 38, 211, 0.1);
  }
  
  @media (max-width: 640px) {
    footer {
      padding: 2rem 1rem 1rem 1rem;
    }
    
    footer > div > div:first-child {
      grid-template-columns: 1fr;
    }
    
    footer > div > div:last-child {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
